    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="styles/index.css">
</head>
<body>
    <!-- Navigation -->
    <nav class="nav" id="navbar">
        <div class="nav-container">
            <img src="logo.png" alt="SSIEMS Logo" class="logo">
            <button class="mobile-menu-btn" id="mobileMenuBtn">
                <i class="fas fa-bars"></i>
            </button>
            <ul id="navMenu">
                <li><a href="#home" class="active">Home</a></li>
                <li><a href="#about">About</a></li>
                <li><a href="#toppers">Toppers</a></li>
                <li><a href="#contact">Contact</a></li>
            </ul>
        </div>
    </nav>

    <!-- Announcement Banner -->
    <div class="announcement">
        <div class="announcement-content">
            <i class="fas fa-bell announcement-icon"></i>
            <span>Result Declared for A.Y. 2022 fourth semester - Students can check their respective login</span>
            <i class="fas fa-sparkles announcement-icon"></i>
        </div>
    </div>

    <!-- Hero Section -->
    <section class="hero" id="home">
        <div class="hero-container">
            <h1 class="hero-title loading">
                Welcome to <span class="highlight">SSIEMS</span><br>
                EduResults Portal
            </h1>
            <p class="hero-subtitle loading">
                Your comprehensive platform for accessing academic results, managing student data, and staying connected with your educational journey.
            </p>
        </div>
    </section>

    <!-- Login Cards Section -->
    <section class="login-section">
        <div class="login-container">
            <div class="section-header">
                <h2 class="section-title loading">Access Your Portal</h2>
                <p class="section-subtitle loading">Choose your role to access the appropriate dashboard</p>
            </div>
            <div class="cards-grid">
                <div class="card loading">
                    <div class="card-icon">
                        <i class="fas fa-user-graduate"></i>
                    </div>
                    <h3>Student Login</h3>
                    <p>Access your academic results, view detailed scorecards, download certificates, and track your academic progress seamlessly.</p>
                    <a href="/student-login" class="cta-button">
                        <i class="fas fa-sign-in-alt"></i>
                        Login as Student
                    </a>
                </div>
                <div class="card admin-card loading">
                    <div class="card-icon">
                        <i class="fas fa-user-shield"></i>
                    </div>
                    <h3>Admin Login</h3>
                    <p>Manage student records, update results, configure portal settings, and oversee the complete academic data management system.</p>
                    <a href="/admin-login" class="cta-button">
                        <i class="fas fa-cogs"></i>
                        Login as Admin
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="stats-section" id="about">
        <div class="stats-container">
            <div class="section-header">
                <h2 class="section-title loading">Our Achievements</h2>
                <p class="section-subtitle loading">Building excellence in education through technology</p>
            </div>
            <div class="stats-grid">
                <div class="stat-card loading">
                    <div class="stat-number" data-target="707">0</div>
                    <div class="stat-label">Total Students</div>
                </div>
                <div class="stat-card loading">
                    <div class="stat-number" data-target="250">0</div>
                    <div class="stat-label">Results Declared</div>
                </div>
                <div class="stat-card loading">
                    <div class="stat-number" data-target="42">0</div>
                    <div class="stat-label">Faculty Members</div>
                </div>
            </div>
        </div>
    </section>

    <!-- Toppers Section -->
    <section class="toppers-section" id="toppers">
        <div class="toppers-container">
            <div class="section-header">
                <h2 class="section-title loading">Meet Our Toppers</h2>
                <p class="section-subtitle loading">Celebrating academic excellence and outstanding achievements</p>
            </div>
            <div class="toppers-table-container loading">
                <div class="table-header">
                    <div>Academic Year</div>
                    <div>Rank</div>
                    <div>Student Name</div>
                    <div>CGPA</div>
                </div>
                <div class="table-row">
                    <div>2023-2024</div>
                    <div><span class="rank-badge rank-1">1st</span></div>
                    <div>Arpita Ramkrishan Gunjkar</div>
                    <div><span class="cgpa-score">10.00</span></div>
                </div>
                <div class="table-row">
                    <div>2023-2024</div>
                    <div><span class="rank-badge rank-2">2nd</span></div>
                    <div>Sakshi Vasantrao Yadav</div>
                    <div><span class="cgpa-score">10.00</span></div>
                </div>
                <div class="table-row">
                    <div>2022-2023</div>
                    <div><span class="rank-badge rank-1">1st</span></div>
                    <div>Vairagar Ramesh N.</div>
                    <div><span class="cgpa-score">9.17</span></div>
                </div>
                <div class="table-row">
                    <div>2022-2023</div>
                    <div><span class="rank-badge rank-2">2nd</span></div>
                    <div>Zarkar Pratiksha Pravin</div>
                    <div><span class="cgpa-score">9.00</span></div>
                </div>
                <div class="table-row">
                    <div>2021-2022</div>
                    <div><span class="rank-badge rank-1">1st</span></div>
                    <div>Dhoot Yash Virendrakumar</div>
                    <div><span class="cgpa-score">9.80</span></div>
                </div>
                <div class="table-row">
                    <div>2021-2022</div>
                    <div><span class="rank-badge rank-2">2nd</span></div>
                    <div>Shinde Vinayak Rajesh</div>
                    <div><span class="cgpa-score">9.50</span></div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="contact-section" id="contact">
        <div class="contact-container">
            <div class="section-header">
                <h2 class="section-title loading">Contact Us</h2>
                <p class="section-subtitle loading">Get in touch with us for any queries or support</p>
            </div>
            <div class="contact-grid">
                <div class="contact-info loading">
                    <h3>Get In Touch</h3>
                    <div style="margin: 2rem 0;">
                        <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1.5rem;">
                            <div style="width: 50px; height: 50px; background: linear-gradient(135deg, var(--primary-color), var(--primary-light)); border-radius: 12px; display: flex; align-items: center; justify-content: center; color: white;">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            <div>
                                <h4 style="font-weight: 600; margin-bottom: 0.25rem; color: var(--text-primary);">Address</h4>
                                <p style="color: var(--text-secondary); margin: 0;">Shri Shivaji Institute Of Engg. & Management Studies, Vasmat Road, NH 222, Parbhani, Maharashtra – 431401</p>
                            </div>
                        </div>
                        <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1.5rem;">
                            <div style="width: 50px; height: 50px; background: linear-gradient(135deg, var(--accent-color), #059669); border-radius: 12px; display: flex; align-items: center; justify-content: center; color: white;">
                                <i class="fas fa-phone"></i>
                            </div>
                            <div>
                                <h4 style="font-weight: 600; margin-bottom: 0.25rem; color: var(--text-primary);">Phone</h4>
                                <p style="color: var(--text-secondary); margin: 0;">0240-2332347</p>
                            </div>
                        </div>
                        <div style="display: flex; align-items: center; gap: 1rem;">
                            <div style="width: 50px; height: 50px; background: linear-gradient(135deg, var(--warning-color), #f59e0b); border-radius: 12px; display: flex; align-items: center; justify-content: center; color: white;">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div>
                                <h4 style="font-weight: 600; margin-bottom: 0.25rem; color: var(--text-primary);">Email</h4>
                                <p style="color: var(--text-secondary); margin: 0;">mspmandal@gmail.com</p>
                            </div>
                        </div>
                    </div>
                    <a href="https://maps.app.goo.gl/Xw1DnoTyDhP3WKdNA" target="_blank" class="map-link">
                        <i class="fas fa-external-link-alt"></i>
                        Open in Google Maps
                    </a>
                </div>
                <div class="contact-form loading">
                    <h3>Send us a Message</h3>
                    <form action="/contact/submit" method="post" id="contactForm">
                        <div class="form-group">
                            <label class="form-label">Full Name *</label>
                            <input type="text" name="name" class="form-input" placeholder="Enter your full name" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Mobile Number *</label>
                            <input type="tel" name="mobile" class="form-input" placeholder="Enter your mobile number" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Message *</label>
                            <textarea name="message" class="form-input form-textarea" placeholder="Type your message here..." required></textarea>
                        </div>
                        <button type="submit" class="submit-button">
                            <i class="fas fa-paper-plane" style="margin-right: 0.5rem;"></i>
                            Send Message
                        </button>
                    </form>
                </div>
            </div>
            <div class="map-container loading">
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3753.5078124347656!2d76.75257107483063!3d19.26184494920501!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bd03843d71a0111%3A0x2a2ed35db9c6236e!2sShri%20Shivaji%20Institute%20of%20Engineering%20and%20Management%20Studies!5e0!3m2!1sen!2sin!4v1698660927935!5m2!1sen!2sin"
                    width="100%" height="400" style="border:0;" allowfullscreen="" loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>
        </div>
    </section>

