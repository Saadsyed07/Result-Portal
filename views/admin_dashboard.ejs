<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>SSIEMS | Admin Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Fonts and Icons -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/admin_dashboard.css">
</head>
<body>
    <!-- Admin Dashboard Navigation -->
    <nav class="admin-nav">
        <div class="admin-logo">
            <img src="/logo.png" alt="SSIEMS Admin Logo">
        </div>
        <ul>
            <li><a href="/admin/dashboard" class="active">Dashboard</a></li>
            <li><a href="#students-list">Students</a></li>
            <li><a href="#">Results</a></li>
            <li><a href="/">Logout</a></li>
        </ul>
    </nav>

    <div class="dashboard-container">
        <h2 class="dashboard-title">Admin Dashboard</h2>
        <p class="dashboard-subtitle">
            Public admin access granted.<br>
            <strong>Anyone can view student results using:</strong><br>
            Username: <span class="dummy-cred">admin</span> | Password: <span class="dummy-cred">admin123</span>
        </p>
        <div class="dashboard-cards">
            <div class="dashboard-card">
                <h3><i class="fas fa-user-graduate"></i> Students List</h3>
                <p>View all students enrolled in the portal.</p>
                <a href="#students-list" class="card-action-btn">Show Students</a>
            </div>
            <div class="dashboard-card">
                <h3><i class="fas fa-table"></i> View Results</h3>
                <p>Browse results for all students. No editing is allowed.</p>
                <a href="#" class="card-action-btn">View Results</a>
            </div>
            <div class="dashboard-card">
                <h3><i class="fas fa-cog"></i> Settings</h3>
                <p>Portal settings and admin information.</p>
                <a href="#" class="card-action-btn">Portal Settings</a>
            </div>
        </div>

        <section id="students-list" style="margin-top:2rem;">
            <h3 class="form-title">All Students</h3>
            <table class="students-table" style="width:100%;border-collapse:collapse;">
                <thead>
                    <tr style="background:#2563eb;color:#fff;">
                        <th style="padding:10px;">PRN</th>
                        <th style="padding:10px;">Name</th>
                        <th style="padding:10px;">Programme</th>
                        <th style="padding:10px;">Semester</th>
                    </tr>
                </thead>
                <tbody>
                    <% students.forEach(student => { %>
                        <tr style="background:#f8fafc;border-bottom:1px solid #e5e7eb;">
                            <td style="padding:10px;"><%= student.id %></td>
                            <td style="padding:10px;"><%= student.name %></td>
                            <td style="padding:10px;">Bachelor of Technology (Computer Science and Engineering)</td>
                            <td style="padding:10px;">IV</td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </section>
    </div>

    <!-- Font Awesome for icons -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
</body>
</html>